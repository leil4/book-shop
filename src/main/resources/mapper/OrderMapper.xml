<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.book.bookshop.mapper.OrderMapper">
    <resultMap id="orderAndOrderDetailResultMap" type="com.book.bookshop.entity.Order">
        <!--订单信息-->
        <id column="id" property="id"></id>
        <result column="user_id" property="userId"></result>
        <result column="address_id" property="addressId"></result>
        <result column="order_num" property="orderNum"></result>
        <result column="order_status" property="orderStatus"></result>
        <result column="create_date" property="createDate"></result>

        <!--用户信息-->
        <association property="user" javaType="com.book.bookshop.entity.User">
            <id column="user_id" property="id"></id>
            <result column="username" property="username"></result>
            <result column="phone" property="phone"></result>
        </association>

        <!--地址信息-->
        <association property="address" javaType="com.book.bookshop.entity.Address">
            <id column="address_id" property="id"></id>
            <result column="province" property="province"></result>
            <result column="city" property="city"></result>
            <result column="area" property="area"></result>
            <result column="detailAddress" property="detailAddress"></result>
        </association>

        <!--订单明细-->
        <collection property="orderItems" ofType="com.book.bookshop.entity.OrderItem">
            <id column="order_item_id"></id>
            <result column="book_id" property="bookId"></result>
            <result column="order_id" property="orderId"></result>
            <result column="count" property="count"></result>
            
            <!--图书信息-->
            <association property="book" javaType="com.book.bookshop.entity.Book">
                <id column="book_id" property="id"></id>
                <result column="name" property="name"></result>
                <result column="img_url" property="imgUrl"></result>
                <result column="new_price" property="newPrice"></result>
            </association>
        </collection>
    </resultMap>
    <select id="findOrderAndOrderDetailListByUser" parameterType="com.book.bookshop.entity.OrderQueryVo" resultMap="orderAndOrderDetailResultMap" >
        SELECT
            bo.*,
            bu.username,
            bu.phone,
            ba.province,
            ba.city,
            ba.area,
            ba.detail_address,
            boi.id order_item_id,
            boi.book_id,
            boi.order_id,
            boi.count,
            bb.id book_id,
            bb.img_url,
            bb.name,
            bb.new_price
        FROM
            bs_order bo,
            bs_user bu,
            bs_address ba,
            bs_order_item boi,
            bs_book bb
        <where>
            <include refid="query_order_where"></include>
        </where>
            <if test="begin!=null and end!=null">
            limit #{begin}, #{end}
            </if>
    </select>

    <!--定义查询条件SQL片段-->
    <sql id="query_order_where">
        bo.user_id = bu.id
        AND bo.address_id = ba.id
        AND bo.id = boi.order_id
        AND boi.book_id = bb.id
        <if test="userId !=null">
            AND bo.user_id = #{userId}
        </if>
        <if test="orderNum !=null and orderNum !=''" >
            AND bo.order_num = #{orderNum}
        </if>
        <if test="tradeStatus !=null and tradeStatus !=''">
            AND bo.order_status = #{tradeStatus}
        </if>
        <if test="startTime !=null">
            AND bo.create_date ;ge #{startTime}
        </if>
        <if test="endTime !=null">
            AND bo.create_date ;le #{endTime}
        </if>

        <if test="orderBy !=null and orderBy !=''">
            order by #{orderBy}
        </if>

    </sql>

    <!--查询记录总数-->
    <select id="findOrderCountByUser" parameterType="OrderQueryVo" resultType="java.lang.Integer">
        SELECT
        count( bo.id )
        FROM
        bs_order bo,
        bs_user bu,
        bs_address ba,
        bs_order_item boi,
        bs_book bb
            
    <where>
        <include refid="query_order_where"></include>
    </where>
    </select>
</mapper>